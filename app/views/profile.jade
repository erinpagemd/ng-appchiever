      h1 Sophomore Year
      h2 Classes
      .container
        .row(ng-repeat='class in classes | filter: "Sophomore"')
          .col-md-4 
            p {{class.name}} 
          .col-md-4
            p {{class.grade}} 
          .col-md-4
            button.btn.btn-warning X  
      h2 Activities
      .container
        .row(ng-repeat='activity in activities | filter: "Sophomore"')
          .col-md-4
